<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageId>Kingas.Aptabase</PackageId>
    <Version>0.0.1</Version>
    <TargetFrameworks>netstandard2.0;net6.0;net8.0</TargetFrameworks>
		<Description>.NET Client for Aptabase: Open Source, Privacy-First and Simple Analytics for .NET</Description>
		<Authors>Pavel Tsimokhautsau</Authors>
		<RepositoryUrl>https://github.com/JKingas/aptabase-net</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<PackageTags>analytics, privacy, sdk, telemetry</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
		<IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <RootNamespace>Kingas.Aptabase</RootNamespace>
    <LangVersion>latest</LangVersion>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging" Version="8.0.0" />
    <PackageReference Include="System.Net.Http.Json" Version="8.0.0" />
  </ItemGroup>

</Project>
